@model WebApplication3.Models.CustomerInformation
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "BankingSystem", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<table class="table">
    <tr>
        <td>Enter Customer-ID:</td>
        <td>@Html.EditorFor(Model => Model.CustomerInformationId, new { HtmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td>Enter Customer-Name:</td>
        <td>@Html.EditorFor(Model => Model.CustomerName, new { HtmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td>Enter Customer-MobileNumber:</td>
        <td>@Html.EditorFor(Model => Model.CustomerMobileNumber, new { HtmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td>Enter Customer-Address:</td>
        <td>@Html.EditorFor(Model => Model.CustomerAddress, new { HtmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td>Enter Customer-Email:</td>
        <td>@Html.EditorFor(Model => Model.CustomerEmail, new { HtmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td>Enter Customer-Password:</td>
        <td>@Html.EditorFor(Model => Model.CustomerPassword, new { HtmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td>Enter CreatedOn:</td>
        <td>@Html.EditorFor(Model => Model.CreatedOn, new { HtmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td><input type="submit" name="submit" value="Add Customer" class="btn btn-success text-center" /></td>
    </tr>
</table>
 }